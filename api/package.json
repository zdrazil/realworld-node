{
  "name": "api",
  "version": "0.0.1",
  "main": "src/app.ts",
  "author": "Vladimir Zdrazil",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "yarn build-ts && yarn lint",
    "build-ts": "tsc",
    "debug": "yarn build && yarn watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint-prettier": "yarn prettier --write src/",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "yarn serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "yarn test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "crypto": "1.0.1",
    "express": "4.17.1",
    "express-jwt": "6.0.0",
    "express-session": "1.17.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.9.25",
    "mongoose-unique-validator": "2.0.3",
    "passport": "0.4.1",
    "passport-local": "1.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/compression": "1.7.0",
    "@types/concurrently": "5.2.1",
    "@types/cors": "2.8.6",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.7",
    "@types/express-jwt": "0.0.42",
    "@types/express-session": "1.17.0",
    "@types/jest": "26.0.4",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongoose": "5.7.32",
    "@types/mongoose-unique-validator": "1.0.4",
    "@types/node": "14.0.23",
    "@types/passport": "1.0.4",
    "@types/passport-local": "1.0.33",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "concurrently": "5.2.0",
    "errorhandler": "1.5.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.1.0",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "ts-jest": "26.1.3",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
